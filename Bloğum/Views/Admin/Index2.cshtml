@using TatilSitesiBlog.Models.Siniflar
@model List<Restaurantlar>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<h2>Restaurant Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/RestaurantSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/RestaurantGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-default">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Admin/YeniRestaurant/" class="btn btn-primary">Yeni Restaurant</a>
